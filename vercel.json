{
    "version": 2,
    "buildCommand": "cd frontend && npm install && CI=false npm run build",
    "outputDirectory": "frontend/build",
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/$1"
        },
        {
            "src": "/",
            "dest": "/frontend/build/index.html"
        }
    ]
}