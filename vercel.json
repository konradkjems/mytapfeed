{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "nodeVersion": "18.x"
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build",
                "buildCommand": "CI=false npm run build",
                "nodeVersion": "18.x"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/static/(.*)",
            "dest": "/frontend/build/static/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/frontend/build/favicon.ico"
        },
        {
            "src": "/manifest.json",
            "dest": "/frontend/build/manifest.json"
        },
        {
            "src": "/(.*)\\.(?:json|css|js|jpg|jpeg|png|gif|ico|svg)",
            "dest": "/frontend/build/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}