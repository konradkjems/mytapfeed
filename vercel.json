{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/build",
                "buildCommand": "cd frontend && npm install && npm run build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/static/(.*)",
            "dest": "/frontend/build/static/$1"
        },
        {
            "src": "/[^.]+",
            "dest": "/frontend/build/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}